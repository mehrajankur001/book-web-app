<div class="box">
    <% books.forEach(book => { %> 
        <div class="item">
            <div>
                <img width="100" height="150" src=<%= book.coverImagePath %> alt="">  
            </div>
            <div>
                <h3>Title: <%= book.title %></h3> 
                <% authors.forEach(author => { %>
                    <% if(author.id == book.author) { %>
                         <h3>Author: <%= author.name %> </h3>
                    <% }%>
                <% })%>
                <h4>Publish Date: <%= book.publishDate.toISOString().split('T')[0] %></h4>
            </div>
        </div>
    <% }) %> 
