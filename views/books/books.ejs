<form action="/books" method="get">
    <label for="">Search</label>
    <input type="text" name="title" value=<%= searchOptions.title %>>
    <label for="">Published Before</label>
    <input type="date" name="publishedBefore" id="" value= <%= searchOptions.publishedBefore %>  >
    <label for="">Published After</label>
    <input type="date" name="publishedAfter" id="" value= <%= searchOptions.publishedAfter %>  >
    <button type="submit">submit</button>
</form>

<div class="box">
    <% books.forEach(book => { %> 
        <div class="item">
            <div>
                <img width="100" height="150" src=<%= book.coverImagePath %> alt="">  
            </div>
            <div>
                <h3>Title: <%= book.title %></h3> 
                <% authors.forEach(author => { %>
                    <% if(author.id == book.author) { %>
                         <h3>Author: <%= author.name %> </h3>
                    <% }%>
                <% })%>
                <h4>Publish Date: <%= book.publishDate.toISOString().split('T')[0] %></h4>
                <p><%= book.description %></p> 
            </div>
            
            
        </div>
    <% }) %> 
</div>
